<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extension des paramètres d'inventaire -->
        <record id="res_config_settings_view_form_inherit_stock_negative" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock.negative</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='stock_operations']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="stock_negative_prevention">
                        <div class="o_setting_left_pane">
                            <field name="prevent_negative_stock_sales"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="prevent_negative_stock_sales"/>
                            <div class="text-muted">
                                Empêche la confirmation des commandes de vente si le stock est insuffisant
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-lg-6 o_setting_box" id="pos_negative_prevention">
                        <div class="o_setting_left_pane">
                            <field name="prevent_negative_stock_pos"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="prevent_negative_stock_pos"/>
                            <div class="text-muted">
                                Empêche la validation des commandes point de vente si le stock est insuffisant
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-lg-6 o_setting_box" id="stock_location_setting" 
                         attrs="{'invisible': [('prevent_negative_stock_sales', '=', False), ('prevent_negative_stock_pos', '=', False)]}">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="stock_location_id" string="Emplacement de Stock"/>
                            <field name="stock_location_id" class="o_light_label"/>
                            <div class="text-muted">
                                Emplacement de stock à vérifier. Si vide, utilise l'emplacement par défaut de l'entrepôt
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
