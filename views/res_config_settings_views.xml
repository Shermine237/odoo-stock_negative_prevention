<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extension des paramètres généraux pour ajouter nos options -->
        <record id="res_config_settings_view_form_inherit_stock_negative" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock.negative</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app string="Stock Negative Prevention" name="stock_negative_prevention">
                        <block title="Prévention Stock Négatif">
                            <setting string="Empêcher Ventes avec Stock Négatif" 
                                     help="Empêche la confirmation des commandes de vente si le stock est insuffisant">
                                <field name="prevent_negative_stock_sales"/>
                            </setting>
                            
                            <setting string="Empêcher POS avec Stock Négatif" 
                                     help="Empêche la validation des commandes point de vente si le stock est insuffisant">
                                <field name="prevent_negative_stock_pos"/>
                            </setting>
                            
                            <setting string="Emplacement de Stock à Vérifier" 
                                     help="Emplacement de stock à vérifier. Si vide, utilise l'emplacement par défaut de l'entrepôt"
                                     attrs="{'invisible': [('prevent_negative_stock_sales', '=', False), ('prevent_negative_stock_pos', '=', False)]}">
                                <field name="stock_location_id"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
